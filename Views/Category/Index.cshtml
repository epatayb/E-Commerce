@model List<CategoryGetModel>
@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "Kategoriler";
}

<div class="row">
    <div class="col">
        <div class="card shadow">
            <div class="card-header py-1 d-flex justify-content-between align-items-center">
                <h5 class="card-title">Kategoriler</h5>
                <a asp-controller="Category" asp-action="Create" class="btn btn-sm btn-primary">
                    <i class="fa-solid fa-plus"></i>
                </a>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-bordered table-striped mb-0">
                        <thead class="table-secondary">
                            <tr>
                                <th>Id</th>
                                <th>Kategori Adı</th>
                                <th>Url</th>
                                <th>Ürün Sayısı</th>
                                <th style="width: 125px;"></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.Id</td>
                                    <td>@item.CategoryName</td>
                                    <td>@item.Url</td> 
                                    <td>@item.TotalProducts</td>
                                    <td>
                                        <a asp-controller="Category" asp-action="Edit" asp-route-id="@item.Id" 
                                            class="btn btn-primary btn-sm">
                                            <i class="fa-solid fa-pen-to-square"></i>
                                        </a> 
                                        <a asp-controller="Product" asp-route-category="@item.Id"  
                                            class="btn btn-primary btn-sm">
                                            <i class="fa-solid fa-right-long"></i>
                                        </a>
                                        @if (item.TotalProducts == 0){
                                            <a asp-controller="Category" asp-action="Delete" asp-route-id="@item.Id"
                                                class="btn btn-danger btn-sm">
                                                <i class="fa-solid fa-trash"></i>
                                            </a> 
                                        }
                                    </td>
                                </tr>  
                            }                                
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
