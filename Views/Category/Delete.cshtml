@model Category
@{
Layout = "_AdminLayout";
ViewData["Title"] = @Model.CategoryName + " Ürününüzü Silmek üzeresiniz!";
}

<div class="row">
    <div class="col">
        <div class="card">
            <div class="card-body text-center">      
                <p>
                    @Model.CategoryName kategorisini silmek istediğinize emin misiniz?
                </p>
                <form asp-controller="Category" asp-action="DeleteConfirm" method="post">
                    <input type="hidden" name="id" value="@Model.Id">
                    <button type="submit" class="btn btn-danger">Sil</button>
                    <a asp-controller="Category" asp-action="Index" class="btn btn-primary">İptal</a>
                </form>  
            </div>
        </div>
    </div>
</div>