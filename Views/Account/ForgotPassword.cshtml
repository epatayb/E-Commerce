@{
    Layout = "_AccountLayout";
    ViewData["Title"] = "Şifremi Unuttum";
}

@section Bar {
    
<li class="breadcrumb-item dropdown d-inline-block">
    <a href="#" class="dropdown-toggle text-decoration-underline" data-bs-toggle="dropdown" role="button">Şifremi Unuttum</a>

    <div class="dropdown-menu">
        <a asp-action="Login" class="dropdown-item text-dark">Giriş Yap</a>
        <a asp-action="Create" class="dropdown-item text-dark">Kayıt Ol</a>
    </div>
    
</li>
}


<section class="mt-3">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-7">
                <div class="card card-body">
                    <form method="post" novalidate asp-controller="Account" asp-action="ForgotPassword">

                        <div class="mb-3">
                            <label for="email" class="form-label">Eposta</label>
                            <input type="email" id="email" name="email" class="form-control">
                        </div>

                        <button type="submit" class="btn btn-primary">Gönder</button>

                    </form>
                </div>
            </div>
        </div>
    </div>
</section>
@section Scripts
{
@await Html.PartialAsync("_ValidationScriptsPartial")
}
