@model Slider
@{
    Layout = "_AdminLayout";
    ViewData["Title"] = @Model.Title + " slider silmek üzeresiniz!";

}

<div class="row">
    <div class="col">
        <div class="card">
            <div class="card-body text-center">
                <img src="~/img/@Model.Image" alt="" class="card-img-top">
                <p>
                    @Model.Title slider silmek üzeresiniz, emin misiniz!
                </p>
                <form asp-action="DeleteConfirm" method="post">
                    <input type="hidden" name="id" value="@Model.Id">
                    <button type="submit" class="btn btn-danger">Sil</button>
                    <a asp-action="Index" class="btn btn-primary">İptal</a>
                </form>
            </div>
        </div>
    </div>
</div>