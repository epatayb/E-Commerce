@model AppRole
@{
    Layout = "_AdminLayout";
    ViewData["Title"] = @Model.Name + " Rolünü Silmek üzeresiniz!";
}

<div class="row">
    <div class="col">
        <div class="card">
            <div class="card-body text-center">
                <p>
                    @Model.Name rolünü silmek istediğinize emin misiniz?
                </p>

                <form asp-action="DeleteConfirm" method="post">
                    <input type="hidden" name="id" value="@Model.Id">

                    @if (ViewBag.Users.Count > 0)
                    {
                    <p style="color: red;">Bu rolde aktif kullanıcılar var bu yüzden bu rolü silemezsiniz.</p>
                    <a asp-action="Index" class="btn btn-primary">İptal</a>
                    @foreach (var item in ViewBag.Users)
                    {
                    <p>
                        @item
                    </p>
                    }
                    }
                    else
                    {
                    <button type="submit" class="btn btn-danger">Sil</button>
                    <a asp-action="Index" class="btn btn-primary">İptal</a>
                    }
                </form>
            </div>
        </div>
    </div>
</div>