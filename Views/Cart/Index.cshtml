@model Cart

@{
Layout = "_AccountLayout";
ViewData["Title"] = "Sepetim";
}

@section Bar {
<li class="breadcrumb-item">
    Alışveriş Sepeti
</li>
}

<section class="mt-3">
    <div class="container">
        @if(Model.CartItems.Count == 0)
        {
        <div class="alert alert-warning">
            Sepette bir ürün yok.
        </div>
        }
        else
        {
        <div class="row">
            <div class="col-lg-7">
                <ul class="list-group">
                    @foreach(var item in Model.CartItems)
                    {
                    <li class="py-3 mb-2 border-top list-group-item cart-item" data-product-id="@item.Product.Id">
                        <div class="row align-items-center">
                            <div class="col-7">
                                <div class="d-flex align-items-center">
                                    <img src="~/img/@item.Product.Image" style="width: 100px;"
                                        alt="@item.Product.ProductName">
                                    <div class="ms-3">
                                        <a asp-controller="Product" asp-action="Details" asp-route-id="@item.Product.Id"
                                            class="title text-truncate text-decoration-none">
                                            <h6 id="product-name-@item.Product.Id" class="mb-0">@item.Product.ProductName</h6>
                                        </a>
                                    </div>
                                </div>
                            </div>
                            <div class="col-2">
                                <input id="cart-count" class="form-control quantity-input" type="number" value="@item.Quantity" 
                                    data-product-id="@item.Product.Id" min="1">
                            </div>
                            <div class="col-2 text-center">
                                <span id="product-price-@item.Product.Id" class="fw-bold">@item.Product.Price ₺</span>
                            </div>
                            <div class="col-1">
                                <form asp-controller="Cart" asp-action="RemoveItem" method="post">
                                    <input type="hidden" name="productId" value="@item.ProductId">
                                    <input type="hidden" name="quantity" value="@item.Quantity">
                                    <button type="submit" class="btn btn-sm btn-danger">
                                        <i class="fa-solid fa-trash-can"></i>
                                    </button>
                                </form>
                            </div>
                        </div>
                    </li>
                    }
                </ul>
            </div>
            <div class="col-lg-5">
                <div class="card">
                    <div class="p-3 card-body">
                        <h2 class="h5 mb-4">Sipariş Özeti</h2>
                        <div class="card mb-2">
                            <div class="list-group list-group-flush">
                                <div class="d-flex justify-content-center align-items-center list-group-item">
                                    <div class="me-auto">
                                        <div>Sipariş Toplamı</div>
                                    </div>
                                    <span id="subtotal">@Model.SubTotal ₺</span>
                                </div>
                                
                                <div class="d-flex justify-content-center align-items-center list-group-item">
                                    <div class="me-auto">
                                        <div>Vergi (%20)</div>
                                    </div>
                                    <span id="tax">@Model.Tax ₺</span>
                                </div>

                                <div class="d-flex justify-content-center align-items-center list-group-item">
                                    <div class="me-auto">
                                        <div>Kargo Ücreti</div>
                                    </div>
                                    <div id="shipping-fee">
                                        @if(@Model.ShippingFee != 0){
                                        <span>@Model.ShippingFee ₺</span>
                                        }
                                        else
                                        {
                                        <span>Ücretsiz</span>
                                        }
                                    </div>
                                </div>
                                
                                <div class="d-flex justify-content-center align-items-center list-group-item">
                                    <div class="me-auto">
                                        <div>Toplam</div>
                                    </div>
                                    <span id="total">@Model.Total ₺</span>
                                </div>
                            </div>
                        </div>
                        <div class="d-flex justify-content-between mt-3">
                            <a asp-controller="Home" asp-action="Index" class="btn btn-outline-primary btn-lg">
                                Alışverişe devam et
                            </a>
                            <a asp-controller="Order" asp-action="Checkout" class="btn btn-danger btn-lg">
                                Siparişi Tamamla
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        }
    </div>
</section>

@section Scripts
{
@await Html.PartialAsync("_ValidationScriptsPartial")
}
