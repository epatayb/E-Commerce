@model ProductEditModel
@{
    Layout = "_AdminLayout";
    ViewData["Title"] = @Model.ProductName + " ürününü güncelle";
}
<form method="post" enctype="multipart/form-data">
    <div class="row">
        <div class="col-md-9">
            <div class="card shadow">
                <div class="card-header py-1 d-flex justify-content-between align-items-center">
                    <h5 class="card-title">Ürün Güncelle</h5>
                    <a asp-controller="Product" asp-action="Index" class="btn btn-sm btn-primary">
                        <i class="fa-solid fa-list"></i>
                    </a>
                </div>
                <div class="card-body">
                    <input type="hidden" name="Id" value="@Model.Id">
                    <input type="hidden" name="ImageName" value="@Model.ImageName">
                    <div class="row mb-3">
                        <label asp-for="ProductName" class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-10">
                            <input asp-for="ProductName" class="form-control">
                            <span asp-validation-for="ProductName" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <label asp-for="Description" class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-10">
                            <textarea asp-for="Description" rows="3" class="form-control"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <label asp-for="Price" class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-10">
                            <input asp-for="Price" class="form-control">
                            <span asp-validation-for="Price" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <label asp-for="Stock" class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-10">
                            <input asp-for="Stock" class="form-control">
                            <span asp-validation-for="Stock" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <label asp-for="IsActive" class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-10">
                            <input asp-for="IsActive" class="form-check-input">
                        </div>
                    </div>
                    <div class="row mb-3">
                        <label asp-for="IsHome" class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-10">
                            <input asp-for="IsHome" class="form-check-input">
                        </div>
                    </div>
                    <div class="row mb-3">
                        <label asp-for="CategoryId" class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-10">
                            <select asp-for="CategoryId" class="form-select" asp-items="ViewBag.Categories">
                                <option value="" selected>Seçiniz</option>
                            </select>
                            <span asp-validation-for="CategoryId" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-sm-10 offset-sm-2">
                            <button type="submit" class="btn btn-primary">Kaydet</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card shadow">
                <div class="card-body">
                    <img src="~/img/@Model.ImageName" alt="@Model.ImageName" class="img-fluid rounded">
                    <input asp-for="Image" class="form-control mt-3">
                    <span asp-validation-for="Image" class="text-danger"></span>
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts
{
    @await Html.PartialAsync("_ValidationScriptsPartial")
}