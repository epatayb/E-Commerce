@model List<ProductGetModel>
@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "Ürünler";
}
<div class="row">
    <div class="col">
        <div class="card shadow">
            <div class="card-header py-1 d-flex justify-content-between align-items-center">
                <h5 class="card-title">Ürünler</h5>
                <a asp-controller="Product" asp-action="Create" class="btn btn-sm btn-primary">
                    <i class="fa-solid fa-plus"></i>
                </a>
            </div>
            <div class="card-body">
                
                <form method="get">
                    <div class="input-group mb-2">
                        <select name="category" class="form-select" asp-items="ViewBag.Categories">
                            <option value="" selected>Hepsi</option>             
                        </select>
                        <button class="btn btn-secondary" type="submit">
                            <i class="fa-solid fa-magnifying-glass"></i>
                        </button>
                    </div>
                </form>

                @if(Model.Count != 0){
                    <div class="table-responsive">
                    <table class="table table-bordered table-hover table-striped mb-0">
                        <thead class="table-secondary">
                            <tr>
                                <th style="width: 20px;">Id</th>
                                <th style="width: 80px;">Resim</th>
                                <th>Ürün Adı</th>
                                <th>Fiyat</th>
                                <th>Stok</th>
                                <th>Aktif</th>
                                <th>Anasayfa</th>
                                <th>Kategori</th>
                                <th style="width: 85px;"></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach(var item in Model){                            
                                <tr>
                                    <td>@item.Id</td>
                                    <td>
                                        <img src="~/img/@item.Image" class="img-fluid" alt="@item.ProductName">
                                    </td>
                                    <td>@item.ProductName</td>
                                    <td>@item.Price ₺</td>
                                    <td>@item.Stock Adet</td>
                                    <td>
                                        @if (item.IsActive)
                                        {              
                                            <i class="fa-solid fa-circle-check text-success"></i>
                                        }                             
                                        else
                                        {
                                            <i class="fa-solid fa-circle-xmark text-danger"></i>
                                        }
                                    </td>
                                    <td>
                                        @if(item.IsHome)
                                        {              
                                            <i class="fa-solid fa-circle-check text-success"></i>
                                        }                             
                                        else
                                        {
                                            <i class="fa-solid fa-circle-xmark text-danger"></i>
                                        }
                                    </td>
                                    <td>
                                        @item.CategoryName
                                    </td>
                                    <td>
                                        <a asp-controller="Product" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary btn-sm">
                                            <i class="fa-solid fa-pen-to-square"></i>
                                        </a>
                                        <a asp-controller="Product" asp-action="Delete" asp-route-id="@item.Id"
                                                class="btn btn-danger btn-sm">
                                                <i class="fa-solid fa-trash"></i>
                                            </a> 
                                    </td>
                                </tr>
                            }                  
                        </tbody>
                    </table>
                    </div>
                }
                else
                {
                    <p class="text-danger mb-3">Ürün bulunamadı.</p>
                }
            </div>
        </div>
    </div>
</div>