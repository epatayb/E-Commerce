@model Product
@{
ViewData["Title"] = @Model.ProductName;
}
<section class="mt-3">
    <div class="container">
        <div class="row">
            <div class="col-lg-5">
                <div class="gallery-wrap">
                    <div class="img-big-wrap img-thumbnail">
                        <a href="~/img/@Model.Image" data-type="image" data-fslightbox>
                            <img src="~/img/@Model.Image" alt="">
                        </a>
                    </div>
                    <div class="thumbs-wrap">
                        <a href="~/img/1-big.jpeg" data-type="image" data-fslightbox>
                            <img src="~/img/1.jpeg" height="60" alt="">
                        </a>
                        <a href="~/img/2-big.jpeg" data-type="image" data-fslightbox>
                            <img src="~/img/2.jpeg" height="60" alt="">
                        </a>
                        <a href="~/img/3-big.jpeg" data-type="image" data-fslightbox>
                            <img src="~/img/3.jpeg" height="60" alt="">
                        </a>
                        <a href="~/img/4-big.jpeg" data-type="image" data-fslightbox>
                            <img src="~/img/4.jpeg" height="60" alt="">
                        </a>
                    </div>
                </div>
            </div>
            <div class="col-lg-7">
                <article>
                    <div id="product-name-@Model.Id"><h4 class="title text-dark">@Model.ProductName</h4></div>
                    <div class="rating-wrap">
                        <span class="fa fa-star checked"></span>
                        <span class="fa fa-star checked"></span>
                        <span class="fa fa-star checked"></span>
                        <span class="fa fa-star checked"></span>
                        <span class="fa fa-star"></span>
                    </div>
                    <div id="product-stock-@Model.Id">
                        @if (0 >= Model.Stock)
                        {
                        <span class="badge bg-danger">
                            <i class="bi bi-x-circle-fill"> En kısa sürede tekrar stokta... </i>
                        </span>
                        }
                        else if ( !(Model.Stock > 10))
                        {
                        <span class="badge bg-warning text-dark">
                            <i class="bi bi-exclamation-triangle-fill"> Tükenmek üzere ! </i>
                        </span>
                        }
                        else
                        {
                        <span class="badge bg-success">
                            <i class="bi bi-check-circle-fill"> Stokta </i>
                        </span>
                        }
                    </div>
                    <div class="mb-3"><b id="product-price-@Model.Id" class="price h5">@Model.Price ₺</b></div>
                    <div id="product-description-@Model.Id" class="product-description mb-3">@Model.Description</div>
                    <div class="buttons">
                        <form asp-controller="Cart" asp-action="AddToCart" method="post" class="me-1 d-inline">
                            <input type="hidden" name="productId" value="@Model.Id">
                            <button type="submit" class="btn btn-warning">
                                <i class="fa fa-shopping-basket"></i> Sepete Ekle
                            </button>
                        </form>
                        <a href="#" class="btn btn-light">
                            <i class="fa-regular fa-heart basket me-1"></i> Listeye Ekle
                        </a>
                    </div>
                </article>
            </div>
        </div>
    </div>
</section>

@{
var urunler = (List<Product>)ViewData["BenzerUrunler"]!;

    if(urunler.Count > 0)
    {
    <section class="mt-3">
        <div class="container">
            <h4 class="mb-3">Benzer Ürünler</h4>
            <div class="row gy-3">

                @foreach (var item in urunler)
                {
                <div class="col-lg-3 col-sm-6 col-12">
                    <div class="card shadow">
                        <div class="img-wrap">
                            <span class="fa fa-regular fa-heart"></span>
                            <img src="~/img/@item.Image" alt="@item.ProductName" class="card-img-top">
                        </div>

                        <div class="border-top info-wrap">
                            <a asp-controller="Product" asp-action="Details" asp-route-id="@item.Id"
                               id="product-name-@item.Id" class="title text-truncate">@item.ProductName</a>
                            <div class="price-wrap mb-3">
                                <span id="product-price-@item.Id" class="price-discount">@item.Price ₺</span>
                            </div>
                            <a href="#" class="btn btn-light w-100">
                                <i class="fa fa-shopping-basket me-1"></i> Sepete Ekle
                            </a>
                        </div>
                    </div>
                </div>
                }
            </div>
        </div>
    </section>
    }
}